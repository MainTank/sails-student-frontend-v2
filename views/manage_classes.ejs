<%- partial ('partials/statusmessage.ejs') %>

<h2>Manage Classs</h2>
<button class="btn btn-success" id="addCourseButton">Add Class</button>
<br />
<table class="table table-striped table-bordered" id="courseTable" style="width:100%">
  <thead>
    <tr>
      <th>Class ID</th>
      <th>Instructor ID</th>
      <th>Subject</th>
      <th>Course</th>
      <th>Admin</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof courses != "undefined" && courses.length > 0){ %>
    <% courses.forEach(function(course){ %>
      <tr>
        <td><%= course.class_id %></td>
        <td><%= course.instructor_id %></td>
        <td><%= course.subject %></td>
        <td><%= course.course %></td>
        <td class="text-center">
          <button class="btn btn-primary" id="editButton" data-Courseid="<%= course.class_id %>">edit</button>
          <button class="btn btn-danger" id="deleteButton" data-Courseid="<%= course.class_id %>">delete</button>
        </td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>

<div style="display: none;" id="deleteConfirm">Are you sure you want to delete this record?</div>

<form action="/delete_class" method="POST" style="display: none;" id="deleteform">
  <input type="hidden" name="class_id" value="landen">
</form>

<form style="display: none;" action="" method="POST" class="form-horizontal" id="manageCourseForm">
  <input type="hidden" name="class_id">
  <div class="form-group">
    <label for="course" class="col-sm-2 control-label">Subject</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="subject" name="subject" placeholder="Subject" required>
    </div>
  </div>
  <div class="form-group">
    <label for="class" class="col-sm-2 control-label">Course</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="course" name="course" placeholder="Course Number" required>
    </div>
  </div>
</form>
